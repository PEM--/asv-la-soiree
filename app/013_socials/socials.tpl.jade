ul.share-buttons
  li
    a.facebook(
      href='', target='_blank', title='Partager sur Facebook',
      data-bind='attr: {href: faceBookUrl}'
    )
      i.fa.fa-facebook-square.fa-2x
  li
    a.twitter(
      href='',
      target='_blank', title='Tweet',
      onclick="window.open('https://twitter.com/intent/tweet?text=' + encodeURIComponent(document.title) + ':%20' + encodeURIComponent(document.URL)); return false;"
    )
      i.fa.fa-twitter-square.fa-2x
  li
    a.gplus(
      href='https://plus.google.com/share?url=http%3A%2F%2Fasv-la-soiree.com',
      target='_blank', title='Partager sur Google+',
      onclick="window.open('https://plus.google.com/share?url=' + encodeURIComponent(document.URL)); return false;"
    )
      i.fa.fa-google-plus-square.fa-2x
