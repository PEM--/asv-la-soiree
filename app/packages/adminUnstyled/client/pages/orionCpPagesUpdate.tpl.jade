// orionCpPagesUpdate
+Layout template='orionCpTitle'
	| Update page
+Layout template='orionCpContentContainer'
	if getSchema
		+quickForm collection='orion.pages.collection' schema=getSchema doc=this id='orionPagesUpdateForm' type='update' buttonContent=false
		a.cancel-btn(href="{{ pathFor 'pages.index' }}") Cancel
		a.delete-btn(href="{{ pathFor 'pages.delete' }}") Delete
		a.save-btn Save
