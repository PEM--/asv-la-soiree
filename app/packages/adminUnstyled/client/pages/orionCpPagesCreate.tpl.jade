// orionCpPagesCreate.tpl
+Layout template='orionCpMediumContentOffset'
  +Layout template='orionCpTitle'
    if choosenTemplate
      | Create a new page - {{ choosenTemplate.name }}
    else
      | Choose a template
  +Layout template='orionCpContentContainer'
    if choosenTemplate
      +quickForm collection='orion.pages.collection' schema=choosenTemplate.schema id='orionPagesCreateForm' type='insert'  buttonContent=false
      br
      button.btn.btn-default.cancel-btn Back
      button.btn.btn-primary.submit-btn Create
    else
      each templates
        h4= name
        p= description
        p: button.btn.btn-primary.btn-xs.template-choose Choose
      hr
      a.btn.btn-default(href="{{ pathFor 'pages.index' }}") Back
