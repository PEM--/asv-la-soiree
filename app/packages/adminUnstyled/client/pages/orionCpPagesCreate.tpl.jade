// orionCpPagesCreate
+Layout template='orionCpTitle'
  if choosenTemplate
    | {{ i18n 'pages.create.title' }} - {{ choosenTemplate.name }}
  else
    | {{ i18n 'pages.create.chooseTemplate' }}
+Layout template='orionCpContentContainer'
  if choosenTemplate
    +quickForm collection='orion.pages.collection' schema=choosenTemplate.schema id='orionPagesCreateForm' type='insert' buttonContent=false
    button.cancel-btn {{ i18n 'global.back' }}
    button.submit-btn {{ i18n 'global.create' }}
  else
    each templates
      h4= name
      p= description
      button.template-choose {{ i18n 'global.choose' }}
    a.user-btn-action(href="{{ RouterLayerPathFor 'pages.index' }}") {{ i18n 'global.back' }}
