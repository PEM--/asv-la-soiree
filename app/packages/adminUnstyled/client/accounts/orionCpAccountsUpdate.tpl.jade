// orionCpAccountsUpdateRoles
+Layout template='orionCpTitle'
  | Edit Roles
  small= user.profile.name
+Layout template='orionCpContentContainer'
  form.roles
    p Select the roles for this user
    each roles
      label
        if hasRole
          input(type='checkbox', role=this, checked)
          span.role= this
        else
          input(type='checkbox', role=this)
          span.role(data-attr=this)= this
    a(href="{{ pathFor 'accounts.index' }}") Cancel
    button.btn-save Save
