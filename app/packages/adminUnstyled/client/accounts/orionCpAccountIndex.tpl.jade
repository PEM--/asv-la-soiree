// orionCpAccountIndex
+Layout template='orionCpTitle'
  | {{i18n 'accounts.myAccount.title'}}
+Layout template='orionCpContentContainer'
  .row
    if currentUser.profile.picture
      p
        img.profile-picture(src="{{ currentUser.profile.picture.url }}")
    p: b= currentUser.profile.name
    with currentUser
      each emails
        p= address
      p
        each roles
          span.role(data-attr=this)= this
  a.user-btn-action.logout {{ i18n 'global.logout' }}
  a.user-btn-action(href="{{ RouterLayerPathFor 'myAccount.profile' }}") {{ i18n 'accounts.updateProfile.title' }}
  a.user-btn-action(href="{{ RouterLayerPathFor 'myAccount.password' }}") {{ i18n 'accounts.changePassword.title' }}
