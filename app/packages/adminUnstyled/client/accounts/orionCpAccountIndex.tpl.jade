// orionCpAccountIndex
+Layout template='orionCpTitle'
  | My Account
+Layout template='orionCpContentContainer'
  .row
    if currentUser.profile.picture
      p
        img.profile-picture(src="{{ currentUser.profile.picture.url }}")
    p: b= currentUser.profile.name
    with currentUser
      each emails
        p= address
      p
        each roles
          span.role(data-attr=this)= this
  a.user-btn-action.logout Logout
  a.user-btn-action(href="{{ pathFor 'myAccount.profile' }}") Update Profile
  a.user-btn-action(href="{{ pathFor 'myAccount.password' }}") Change Password
