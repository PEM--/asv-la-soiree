// orionCpRegisterWithInvitation
+contentFor 'title'
  | Register
if invitation
  if error
    p= error
  else
    p
      label= invitation._id
  form
    label Email
    if invitation.email
      input.form-control(value="{{ invitation.email }}", name='email', type='email', disabled)
    else
      input.form-control(placeholder='Email', name='email', type='email')
    label Name
    input.form-control(placeholder='Name', name='name', type='text')
    label Password
    input.form-control(placeholder='Password', name='password', type='password')
    label Password (again)
    input.form-control(placeholder='Password (again)', name='password-confirm', type='password')
    br
    button Register
