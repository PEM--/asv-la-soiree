+contentFor 'title'
  | Register
if invitation
  if error
    p
      .alert.alert-danger= error
  else
    p
      label.label.label-danger= invitation._id
  form
    label Email
    if invitation.email
      input.form-control(value="{{ invitation.email }}", name="email", type="email", disabled)
    else
      input.form-control(placeholder="Email", name="email", type="email")
    label Nom
    input.form-control(placeholder="Nom", name="name", type="text")
    label Mot de passe
    input.form-control(placeholder="Mot de passe", name="password", type="password")
    label Mot de passe (de nouveau)
    input.form-control(placeholder="Mot de passe (de nouveau)", name="password-confirm", type="password")
    br
    button.btn.btn-primary.btn-block.btn-lg Register
