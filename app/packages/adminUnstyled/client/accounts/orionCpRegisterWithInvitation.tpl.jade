// orionCpRegisterWithInvitation
.invite
  +contentFor 'title'
    | {{ i18n 'accounts.registerWithInvitation.title' }}
  if invitation
    if error
      p= error
    else
      p
        label= invitation._id
    form
      label {{i18n 'accounts.registerWithInvitation.fields.email'}}
      if invitation.email
        input.form-control(value="{{ invitation.email }}", name='email', type='email', disabled)
      else
        input.form-control(placeholder="{{i18n 'accounts.registerWithInvitation.fields.email'}}", name='email', type='email')
      label {{i18n 'accounts.registerWithInvitation.fields.name'}}
      input.form-control(placeholder="{{i18n 'accounts.registerWithInvitation.fields.name'}}", name='name', type='text')
      label {{i18n 'accounts.registerWithInvitation.fields.password'}}
      input.form-control(placeholder="{{i18n 'accounts.registerWithInvitation.fields.password'}}", name='password', type='password')
      label {{i18n 'accounts.registerWithInvitation.fields.confirmPassword'}}
      input.form-control(placeholder="{{i18n 'accounts.registerWithInvitation.fields.confirmPassword'}}", name='password-confirm', type='password')
      button {{i18n 'accounts.registerWithInvitation.registerButton'}}
