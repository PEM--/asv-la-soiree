template(name='orionCpSidebar')
  // orionCpSidebar
  ul
    li
      //a(href="{{ options 'homePath' '/' }}") {{ options 'siteName' 'Admin' }}
      a(href="{{ options 'homePath' '/' }}")
        +websiteLogo
        span {{ options 'siteName' 'Admin' }}
    each adminLinks
      +orionCpSidebarLink

template(name='orionCpSidebarLink')
  // orionCpSidebarLink
  if childs
    li
      if routeName
        a.collaps-link-right(data-target='#admin-links-{{identifier}}', data-toggle='collapse')
          span.caret
        a(href='{{pathFor routeName}}')= title
      else
        a(data-target='#admin-links-{{identifier}}', data-toggle='collapse')= title
          span.caret
    .collapse(id='#admin-links-{{identifier}}')
      ul.child-links
        each childs
          +orionCpSidebarLink
  else
    li(class='{{isActiveRoute regex=activeRouteRegex}}')
      a(href='{{pathFor routeName}}')= title
        
