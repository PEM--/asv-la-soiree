// orionCpCollectionsUpdate
+Layout template='orionCpTitle'
  | Update {{ collection.singularName }}
+Layout template='orionCpContentContainer'
  +if item.canShowUpdate
    +quickForm collection=collection doc=item id='orionCpCollectionsUpdateForm' type='update' buttonContent=false
    a.user-btn-action(href="{{ collection.indexPath }}") Cancel
    if item.canShowRemove
      a.user-btn-action-warning(href="{{ collection.deletePath item._id }}") Delete
    a.user-btn-action.save-btn Save
