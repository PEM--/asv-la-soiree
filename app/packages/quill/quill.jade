template(name='orionAttributesQuill')
  .orionQuill {{this.atts}}
    if isUploading
      br
      .progress
        .progress-bar.progress-bar-striped.active(style="width: {{ progress }}%")
      .quill.ql-container
        .quill-toolbar.ql-toolbar.toolbar-container
          select.ql-size(title='Size')
            option(value='10px') Small
            option(value='13px', selected) Normal
            option(value='18px') Large
            option(value='32px') Huge
          select.ql-font(title='Font')
            option(value='sans-serif', selected) Sans-serif
            option(value='serif') Serif
            option(value='monospace') Monospace
          button.ql-bold(title='Bold')
          button.ql-italic(title='Italize')
          button.ql-strike(title='Strike')
          button.ql-underline(title='Underline')
          button.ql-link(title='Link')
          button.ql-image(title='Image')
          select.ql-background(title='Background Color')
            each colors
              option(value=this)
          select.ql-color(title='Text color')
            each colors
              option(value=this)
          button.ql-list(title='Ordered list')
          button.ql-bullet(title='Bullet list')
          select.ql-align(title='Text Alignment')
            option(value='left', selected) Left
            option(value='center') Center
            option(value='right') Right
            option(value='justify') Justify
        .quill-editor

template(name='orionAttributesQuillColumn')
  +preview
