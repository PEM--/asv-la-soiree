.ql-tooltip
  background-color: #fff
  border: 1px solid #000
  box-sizing: border-box
  position: absolute
  top: 0px
  white-space: nowrap
  z-index: 2000
  border: 1px solid #ccc
  box-shadow: 0px 0px 5px #ddd
  color: #222
  a
    cursor: pointer
    text-decoration: none
  .input
    border: 1px solid #ccc
    margin: 0px
    padding: 5px
