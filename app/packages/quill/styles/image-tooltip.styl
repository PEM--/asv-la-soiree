.ql-image-tooltip
  padding 10px
  width 300px
  &after
    clear both
    content ''
    display table
  a
    border 1px solid #06c
    box-sizing border-box
    display inline-block
    float left
    padding 5px
    text-align center
    width 50%
  a.insert
    background-color #06c
    color #fff
  img
    bottom 0
    left 0
    margin auto
    max-height 100%
    max-width 100%
    position absolute
    right 0
    top 0
  .input
    box-sizing border-box
    width 100%
  .preview
    margin 10px 0px
    position relative
    border 1px dashed #000
    border-color #ccc
    color #ccc
    height 200px
    span
      display inline-block
      absolute top 40%
      text-align center
      width 100%
