@import 'nib'
//@import 'jeet'
@import '020_colorsTheme/*.import'
@import s(basePath, links)

.main-container
  //edit()
  >nav
    opacity 0
    fixed top left
    background rgba(textColor, 95%)
    transition opacity defaultTransitionValue, background-color defaultTransitionValue
    z-index 1000
    width 100%
    pointer-events none
    transform translateZ(0)
    >.nav
      position relative
      display block
      width 100%
      max-width maxSize
      margin 0 auto
      .logo
        display block
        relative top .7em left
        size 11em 4em
        cursor pointer
        pointer-events auto
        >.svg-logo-container
          asvlasoireeBigLogo(100%)
      .hamburger-button
        absolute top .7em right
        display block
        size 4em
        background-color rgba(bgColor, 20%)
        border 2px solid brandColor
        border-radius 50%
        pointer-events auto
        cursor pointer
        transition transform defaultTransitionValue, background-color defaultTransitionValue
        span
          absolute top 50% left 50%
          size 2.5em 2px
          display block
          transform translate3d(-50%,-50%,0)
          background-color bgColor
          transition background-color defaultTransitionValue
          border-radius @height
          pointer-events none
          &:before, &:after
            absolute top left
            size 2.5em 2px
            content ''
            display block
            border-radius @height
            transform translate3d(0,-6px,0)
            background-color bgColor
            transition transform defaultTransitionValue, background-color defaultTransitionValue
            transform-origin 50% 50%
            pointer-events none
          &:after
            transform translate3d(0,6px,0)
        &:hover
          span:before
            transform translate3d(0,-8px,0)
          span:after
            transform translate3d(0,8px,0)
        &.open
          transform rotateZ(180deg)
          span
            background transparent
            &:before
              transform translate3d(0,0,0) rotateZ(45deg)
            &:after
              transform translate3d(0,0,0) rotateZ(-45deg)
      ul
        fixed top 4em left
        width 100%
        height 100vh
        z-index -1
        margin 0
        padding 0
        reset-list()
        display flex
        flex-direction column
        flex-wrap nowrap
        justify-content flex-start
        align-content flex-start
        align-items flex-start
        background rgba(textColor, 95%)
        transition transform defaultTransitionValue, background defaultTransitionValue
        transform translate3d(100%,0,0)
        &.open
          transform none
        &:after
          flex-grow 1
          flex-shrink 0
          content ''
          size 100% 100vh
          display block
        li
          flex-grow 1
          flex-shrink 0
          margin 0
          font-size 1.3em
          font-family BaronNeue
          pointer-events auto
          border-bottom 1px solid bgColor
          transition border-color defaultTransitionValue
          position relative
          display block
          size 100% 4em
          a
            display block
            text-align center
            padding-top 1.3em
            size 100%
            transition color defaultTransitionValue
            color bgColor
            text-decoration none
        li.active
          pointer-events none
          a
            color brandColor
    // Handle cases when the menu cover a white aera
    &.white
      background rgba(bgColor, 95%)
      .nav
        ul
          background rgba(bgColor, 95%)
          li
            border-color textColor
            a
              color textColor
        .hamburger-button
            background-color rgba(textColor, 20%)
          span
            background-color brandColor
            &:before, &:after
              background-color brandColor
