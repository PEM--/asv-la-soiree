// Base path for Creative & Pure
basePath = '.meteor/local/build/programs/web.browser/packages/pierreeric_creativepure/styles/%s'

// Global variables
roundCorner =     3px
buttonSmallSize = 70px

// Main colors
// black :  #1d1d1b
// pink:    #e6007e
// orange:  #f27220
// red:     #ab2222
// white:   #ffffff
brandColor =    #e6007e
//textColor =     darken(brandColor, 70%)
//bgColor =       lighten(brandColor, 90%)
bgColor =       #ffffff
brandPrimary =  brandColor
//brandDanger =   hsl(0, saturation(brandColor),lightness(brandColor))
//brandWarning =  hsl(45, saturation(brandColor),lightness(brandColor))
brandDanger =   #ab2222
brandWarning =  #f27220
brandSuccess =  #D3D800
brandInfo =     #00ADEF
blackBg = #1d1d1b
textColor = blackBg
outlineColor = darken(bgColor, 20%)

// Breakpoints using Rupture
maxSize = 960px
rupture.scale = 0 320px 800px maxSize
rupture.scale-names = 'small' 'medium' 'desktop' 'hd'

$monotype = Consolas, "Andale Mono WT", "Andale Mono", "Lucida Console", "Lucida Sans Typewriter", "DejaVu Sans Mono", "Bitstream Vera Sans Mono", "Liberation Mono", "Nimbus Mono L", Monaco, "Courier New", Courier, monospace

// Fonts for Typographic
fontSize()
  font-size 11px
  +above('small')
    font-size @font-size + 1
  +above('medium')
    font-size @font-size + 2
  +above('desktop')
    font-size @font-size + 3
  +above('hd')
    font-size @font-size + 4


// Default transition values
defaultTransitionValue = .3s ease-out
