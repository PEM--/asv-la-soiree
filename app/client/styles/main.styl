@import 'nib'
@import 'jeet'
@import 'typographic'
@import 'client/styles/*.import'

typographic()

// Normalize CSS using Axis
normalize-css()

// Set fonts and default colors
t-headers(monoFont)
html, body
  background-color bgColor
  color textColor
  font-family monoFont
  transition all defaultTransitionValue
  fontSize()

*, *::after, *::before
  // Globally set the sizing behavior
  box-sizing border-box
  // Ensure font's antialising
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-touch-callout none

// Set page height
html, body
  height 100%

.main-container
  min-height 100%
  overflow auto
  transition opacity defaultTransitionValue

// Styles on text content
p, blockquote
  text-align justify

::selection
  color bgColor
  background brandColor

@import s(basePath, ironprogress)
@import s(basePath, links)

.orion-bootstrap-admin
  background white
  min-height 100%
