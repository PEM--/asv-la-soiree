@import 'nib'
@import 'jeet'
@import 'typographic'
@import 'client/styles/*.import'

// Normalize CSS using Axis
normalize-css()

// Breakpoints using Rupture
maxSize = 960px
rupture.scale = 0 320px 600px 800px maxSize
rupture.scale-names = 'xsmall' 'small' 'medium' 'desktop' 'hd'
// Fonts for Typographic
fontSize()
  font-size 11px
  +above('small')
    font-size @font-size + 1
  +above('medium')
    font-size @font-size + 2
  +above('desktop')
    font-size @font-size + 3
  +above('hd')
    font-size @font-size + 4
typographic()
// Set fonts and default colors
t-headers($helvetica)
html, body
  color textColor
  font-family $helvetica
  fontSize()
h1
  font-family BaronNeue

// Global settings
*, *::after, *::before
  // Globally set the sizing behavior
  box-sizing border-box
  // Ensure font's antialising
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-touch-callout none
  // Remove outlining
  outline none
  &:hover, &:focus, &:active
    outline none
  // Mobile specific for iOS and Android: removes text selection
  -webkit-tap-highlight-color: rgba(0,0,0,0);
  // Accelerate scrolling
  backface-visibility hidden

// Set page height
html, body
  height 100%

// Styles on text content
p, blockquote
  text-align justify

::selection
  color bgColor
  background brandColor

@import s(basePath, ironprogress)
// Iron router progress acceleration
#iron-router-progress
  transform translateZ(10000px)
	&.spinner:before
  transform translateZ(10000px)

// Set responsive SVG
.svg-content
  display inline-block
  absolute top left

// Correct context for picture polyfill
picture img
  size 100% auto
