@import 'nib'
@import 'jeet'
@import 'typographic'
@import 'client/styles/*.import'

// Breakpoints using Rupture
maxSize = 960px
rupture.scale = 0 320px 600px 800px maxSize
rupture.scale-names = 'xsmall' 'small' 'medium' 'desktop' 'hd'

// Fonts for Typographic
fontSize()
  font-size 11px
  +above('small')
    font-size @font-size + 1
  +above('medium')
    font-size @font-size + 2
  +above('desktop')
    font-size @font-size + 3
  +above('hd')
    font-size @font-size + 4

typographic()

// Normalize CSS using Axis
normalize-css()

*, *::after, *::before
  // Globally set the sizing behavior
  box-sizing border-box
  // Ensure font's antialising
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-touch-callout none

// Set fonts and default colors
t-headers(monoFont)
html, body
  color textColor
  font-family $helvetica
  fontSize()
h1
  font-family BaronNeue

// Set page height
html, body
  height 100%

// Styles on text content
p, blockquote
  text-align justify

::selection
  color bgColor
  background brandColor

@import s(basePath, ironprogress)

.svg-content
  display inline-block
  absolute top left
