@import 'nib'
@import 'jeet'
@import 'typographic'
@import 'client/views/admin/*.import'

.admin
  table
    table(striped: false, condensed: true)
    border-color outlineColor
    thead
      background-color outlineColor
      color textColor
      tr, th
        color inherit
        border-color outlineColor
    tbody
      color textColor
      td
        background-color transparent
        border-color outlineColor
      tr
        background-color transparent
        transition background-color defaultTransitionValue
        &:nth-child(2n)
          background-color outlineColor
        &:hover
          background-color alpha(white, 20%)
  .user-btn-action
    button bgColor
