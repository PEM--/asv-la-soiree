@import 'nib'
@import 'jeet'
@import 'typographic'
@import 'client/views/admin/*.import'

.admin
  header
    h1
      margin 0
      padding 0
      size 100%
      relative top left
      background lighten(bgColor, 5%)
      span
        absolute bottom .4em left .4em
        animation fadeIn defaultTransitionValue
        a, a:visited
          absolute bottom right -3em
          font-size 60%
          transition color defaultTransitionValue
          &:hover
            color brandWarning
