@import 'nib'
@import 'jeet'
@import 'client/styles/global-var.import'

.main-container
  size 100%
  // overflow auto
  transition opacity defaultTransitionValue
  header
    margin 0
    padding 0
    size 100%
    background brandInfo
    //overflow hidden
    //min-height 100%
    h1
      text-align center
    video
      fixed 0 0
      bottom 0
      right 0
      size auto
      min-width 100%
      min-height 100%
      object-fit cover
      transition all defaultTransitionValue

  main
    width 100%
    margin 0
    padding 0
    z-index 1
    background bgColor
    flex-grow 1
    flex-shrink 0
    >section
      center(maxSize)

  footer
    width 100%
    margin 0
    padding 0
    z-index 1
    background brandSuccess
    >section
      center(maxSize)
