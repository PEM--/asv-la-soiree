@import 'nib'
@import 'jeet'
@import 'client/styles/*.import'

.main-container
  transition opacity defaultTransitionValue
  margin 0
  padding 0
  size 100%
  main
    transform translateZ(0)
    width 100%
    margin 0
    padding 0
    z-index 1
    background textColor
    p
      color bgColor
    >section
      z-index 1
      display inline-block
      center(maxSize)
  footer
    transform translateZ(0)
    width 100%
    margin 0
    padding 0
    z-index 1
    background bgColor
    color textColor
    >section
      display inline-block
      center(maxSize)
