@import 'nib'
@import 'jeet'
@import 'client/styles/*.import'

html, body, .main-container, .router-container
  margin 0
  padding 0
  border 0

.main-container
  h1, p, section, header, main, footer
    margin 0
    padding 0
    border 0

.main-container[data-role=\'spinner\']
  opacity 1

.main-container:not([data-role=\'spinner\'])
  opacity 0

.main-container
  display flex
  flex-direction column
  min-height 100vh
  transition opacity defaultTransitionValue
  width 100%
  z-index 1
  overflow auto
  .router-container
    flex-grow 1
    flex-shrink 0
    width 100%
    transition opacity defaultTransitionValue
    //background blue
    display flex
    flex-direction column
    main
      flex-grow 0
      flex-shrink 0
      //background red
      background textColor
      section
        //background yellow
        margin 1em 0
        center(maxSize)
        h1
          color brandColor
        h2, h3, h4, h5, h6, p
          color bgColor
    main:not([data-role='home'])
      margin 5em 0 0 0
