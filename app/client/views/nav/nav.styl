@import 'nib'
@import 'jeet'
@import 'client/styles/*.import'
@import s(basePath, links)

.main-container
  transition opacity defaultTransitionValue
  margin 0
  padding 0
  size 100%
  >nav
    opacity 0
    fixed top left
    background rgba(textColor, 80%)
    //background yellow
    z-index 1000
    width 100%
    display flex
    justify-content center
    >.nav
      flex-grow 0
      flex-shrink 0
      width 100%
      max-width maxSize
      display flex
      >.logo
        flex-grow 0
        flex-shrink 0
        display inline-block
        relative top .7em left
        size 11em 4em
        //background red
        >.svg-logo-container
          asvlasoireeBigLogo(100%)
          cursor pointer
      >ul
        flex-grow 1
        flex-shrink 0
        //background violet
        display flex
        flex-wrap no-wrap
        align-content flex-end
        justify-content flex-end
        inline-list()
        >li
          margin 1em
          font-size 1.3em
          font-family BaronNeue
          cpLinks(brandColor)
          >a
            transition color .3s ease-in-out
            color bgColor
        >li.active
          >a
            color brandColor
