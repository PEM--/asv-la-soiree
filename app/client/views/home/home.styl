.main-container
  video
    fixed bottom right
    min-width 100%
    min-height 100%
    size auto
    overflow hidden
  header
    margin 0
    padding 0
    size 100%
    >section
      display inline-block
      width 100%
      margin 0
      padding 0
      z-index 1
      min-height 100%
      transform translateZ(0)
      overflow hidden
      asvlasoireeLogoWidth = 260
      asvlasoireeLogoHeight = 254.73
      svgWidth = 20%
      text-align center
      background: linear-gradient(to bottom, rgba(29,29,27,0) 0%,rgba(29,29,27,0) 80%,rgba(29,29,27,1) 100%);
      .center-all
        absolute top 50%
        width 100%
        padding-top 1.5em
        transform translateY(-50%)
        .svg-logo-container
          filter drop-shadow(0 0 5px rgba(black, 20%))
          display inline-block
          position relative
          width svgWidth
          padding-bottom (svgWidth*asvlasoireeLogoHeight/asvlasoireeLogoWidth)
          vertical-align middle
          overflow hidden
        h1
          font-size 3em
          text-align center
          font-weight 900
          color brandColor
          text-shadow 0 0 5px rgba(black, 20%)
