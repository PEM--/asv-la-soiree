@import 'nib'
@import 'jeet'
@import 'client/styles/*.import'

.main-container
  >video
    fixed bottom right
    min-width 100%
    min-height 100%
    size auto
    overflow hidden
  >header
    margin 0
    padding 0
    size 100%
    >section
      display inline-block
      width 100%
      margin 0
      padding 0
      z-index 1
      min-height 100%
      transform translateZ(0)
      overflow hidden
      text-align center
      //background green
      background: linear-gradient(to bottom, rgba(29,29,27,0) 0%,rgba(29,29,27,0) 80%,rgba(29,29,27,1) 100%);
      >.center-all
        absolute top 50%
        width 100%
        padding-top 1.5em
        transform translateY(-50%)
        >.svg-logo-container
          filter drop-shadow(0 0 10px rgba(black, 40%))
          display inline-block
          position relative
          asvlasoireeBigLogo(60%)
          vertical-align middle
          overflow hidden
