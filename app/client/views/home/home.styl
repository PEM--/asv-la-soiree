@import 'nib'
@import 'jeet'
@import 'client/styles/*.import'

@import s(basePath, animate)

.main-container
  .router-container
    >video
      fixed bottom right
      min-width 100%
      min-height 100%
      size auto
      overflow hidden
      opacity 0
      animation fadeIn 1s 4s ease-in-out forwards
    header
      // Create a new context for overlapping video
      z-index 1
      transform translateZ(0)
      //background green
      section
        // Create a new context for overlapping video
        z-index 1
        transform translateZ(0)
        absolute top left
        display inline-block
        size 100%
        margin 0
        padding 0
        min-height 100%
        display flex
        flex-direction column
        justify-content center
        align-items center
        align-content center
        // background red
        .center-all
          //background yellow
          flex-grow 0
          flex-shrink 0
          width 60%
          z-index 1
          >.svg-logo-container
            opacity 1
            animation fadeInDown 1s ease-in-out
            //filter drop-shadow(0 0 5px rgba(black, 50%))
            transition transform none
            transform translateZ(0)
            asvlasoireeBigLogo(100%)
        .arrow-down
          background linear-gradient(to bottom, rgba(29,29,27,0) 0%,rgba(29,29,27,0) 80%,rgba(29,29,27,1) 100%)
          // Create a new context for overlapping video
          z-index 1
          transform translateZ(0)
          width 100%
          height 15%
          absolute bottom left
          .arrow-down-centered
            //background blue
            transition opacity .3s ease-in-out
            margin auto auto
            width 6.5%
            max-width 40px
            .svg-logo-container
              opacity 0
              transition transform 16 linear
              animation fadeIn 1s 1s ease-in-out forwards
              arrowDownLogo(100%)
    main[data-role='home']
      a, a:visited
        text-decoration none
        pointer-events none
        cursor default
