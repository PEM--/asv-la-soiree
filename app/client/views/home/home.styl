@import 'nib'
@import 'jeet'
@import 'client/styles/*.import'

@import s(basePath, animate)

.main-container
  .router-container
    >video
      fixed bottom right
      min-width 100%
      min-height 100%
      size auto
      overflow hidden
      opacity 0
      animation fadeIn 1s 4s ease-in-out forwards
    header
      height 100%
      min-height 100vh
      // Create a new context for overlapping video
      z-index 1
      transform translateZ(0)
      //background green
      section
        // Create a new context for overlapping video
        z-index 1
        transform translateZ(0)
        absolute top left
        display inline-block
        size 100%
        margin 0
        padding 0
        min-height 100%
        overflow hidden
        background linear-gradient(to bottom, rgba(29,29,27,0) 0%,rgba(29,29,27,0) 80%,rgba(29,29,27,1) 100%);
        display flex
        flex-direction column
        justify-content center
        align-items center
        align-content center
        // background red
        .center-all
          //background yellow
          flex-grow 0
          flex-shrink 0
          opacity 0
          animation fadeInDown 1s 1s ease-in-out forwards
          //absolute top 50% left 50%
          width 60%
          z-index 1
          //transform translate3d(-50%, -50%, 0)
          >.svg-logo-container
            filter drop-shadow(0 0 5px rgba(black, 50%))
            asvlasoireeBigLogo(100%)
        .arrow-down
          opacity 0
          animation fadeIn 1s 3s ease-in-out forwards
          absolute bottom 5% left 46%
          width 6.5%
          z-index 1
          .svg-logo-container
            arrowDownLogo(100%)
    main
      // Create a new context for overlapping video
      z-index 1
      transform translateZ(0)
      h1, h2, h3, h4, h5, h6, p, a, a:visited
        color bgColor
