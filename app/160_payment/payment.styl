@import 'nib'
@import 'jeet'
@import 'typographic'
@import '020_colorsTheme/*.import'
@import s(basePath, animate)

.main-container .router-container
  main[data-role='payment']
    display flex
    flex-direction column
    flex-wrap nowrap
    size 100% 100vh
    min-height 100vh
    margin 0
    box-sizing border-box
    background white
    overflow-x hidden
    h1, h2, h3, h4, h5, h6, p, label, input, pre
      font-family $helvetica
      color black
    // Remove site wide selection
    h1, h2, h3, h4, h5, h6, p, label, input, div, pre, b, span
      &::selection
        background-color yellow
        color black
    // Main screen informations
    article
      flex-grow 1
      flex-shrink 0
      center(maxSize)
      width 100%
      box-sizing border-box
      .cookieError
        absolute top 25% left
        text-align center
        width 100%
        h1, p
          text-align center
          width 100%
        h1
          color red
        p
          font-size 2em
      // Layout for invoice, card and form
      .invoice-payment-form
        display flex
        flex-wrap wrap
        flex-direction row
        justify-content space-between
        align-items flex-start
        align-content flex-start
        .invoice, .payment-form
          flex-shrink 0
          display inline-block
          margin-top 1em
        // Invoice
        .invoice
          flex-grow 1
          relative top left
          fontWidth = 10px
          fontHeight = 15px
          margin fontWidth fontWidth/2
          border 1px solid darkgray
          padding (fontWidth/2)
          width (42*fontWidth)
          min-width @width
          max-width @width
          text-align center
          margin 0 auto
          pre
            width (40*fontWidth)
            font-family $courier
            font-size fontHeight
        // Payment selector
        .payment-form
          flex-grow 1
          relative top right
          width 49%
          margin-top 0
          padding 0 .5em .5em .5em
          span.choice
            size 30em 14px
            display inline-block
            relative top left
            label
              absolute top left 20px
              font-size 14px
              width calc(30em - 20px)
              &::before, &::after
                background darkgray
                transition background-color defaultTransitionValue, border-color defaultTransitionValue
              &::before
                absolute top 6px left -20px
                border 1px solid darkgray
              &::after
                absolute top 10px left -16px
            input:checked + label::before
              border 1px solid black
            input:checked + label::after
              background #019000
          // Separator
          .check-form, .card-form
            margin-top 1em
            border-top 1px solid gray
            padding-top 1em
          // Check and form
          .check-form
            p
              line-height 1.2em
              margin-bottom .8em
            p.text-center
              text-align center
          // Card and form
          .card-form
            form
              center(400px)
              box-sizing border-box
              margin-top 1em
              input, button
                margin 2px 0 0 0
                font-size 14px
                display inline-block
                box-sizing border-box
              input[name='number'], input[name='name']
                width 49%
              input[name='expiry'], input[name='cvc']
                width 24%
              input
                border 1px solid darkgray
                &:focus
                  border-color lightblue
          // Validate payment button
          button
            button green
            width 49%
    // Braintree logo
    footer
      flex-grow 0
      flex-shrink 0
      center(maxSize)
      width 100%
      box-sizing border-box
      border-top 1px solid black
      .svg-logo-container
        cursor pointer
        margin 1em 0
        braintreeLogo(15%)
